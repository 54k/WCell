<Config>
  <Settings>
    <WCell>
      <AuthServer>
        <Accounts>
          <AccountMgr>
            <MaxAccountNameLen>20</MaxAccountNameLen>
            <MinAccountNameLen>3</MinAccountNameLen>
          </AccountMgr>
          <AuthenticationRecord>
            <AuthenticationStoreSeconds>30</AuthenticationStoreSeconds>
          </AuthenticationRecord>
        </Accounts>
        <Addons>
          <AuthAddonMgr>
            <AddonDir>AuthServerAddons</AddonDir>
            <IgnoredAddonFiles />
          </AuthAddonMgr>
        </Addons>
        <AuthenticationHandler>
          <FailedLoginDelay>200</FailedLoginDelay>
        </AuthenticationHandler>
        <AuthServerConfiguration>
          <AutocreateAccounts>True</AutocreateAccounts>
          <CacheAccounts>True</CacheAccounts>
          <ConfigDir>cfg</ConfigDir>
          <ContentDir>AuthContent</ContentDir>
          <DBConnectionString>Server=127.0.0.1;Port=3306;Database=WCellAuthServer;CharSet=utf8;Uid=root;Pwd=;</DBConnectionString>
          <DBType>mysql5</DBType>
          <DefaultLocale>English</DefaultLocale>
          <DefaultRole>Player</DefaultRole>
          <ForcePatches>False</ForcePatches>
          <Host>127.0.0.1</Host>
          <IPCAddress>net.tcp://127.0.0.1:7470</IPCAddress>
          <LangDirName>Lang</LangDirName>
          <Port>3724</Port>
          <RealmIPs>
            <Item>127.0.0.1</Item>
          </RealmIPs>
          <RemoveOfflineRealms>False</RemoveOfflineRealms>
          <UseUPnP>False</UseUPnP>
        </AuthServerConfiguration>
        <Commands>
          <AccountCommand>
            <AccountListCommand>
              <MaxListCount>100</MaxListCount>
              <MaxListDetailsCount>6</MaxListDetailsCount>
            </AccountListCommand>
          </AccountCommand>
          <AuthCommandHandler>
            <AutoExecDir>../AuthServerAutoExec/</AutoExecDir>
            <AutoExecStartupFile>_Startup.txt</AutoExecStartupFile>
          </AuthCommandHandler>
        </Commands>
        <Database>
          <AuthDBUtil>
            <DefaultCharset>UTF8</DefaultCharset>
          </AuthDBUtil>
        </Database>
        <Privileges>
          <PrivilegeMgr>
            <RoleGroupFile>RoleGroups.xml</RoleGroupFile>
          </PrivilegeMgr>
        </Privileges>
        <Stats>
          <AuthStats>
            <StatsPostDelay>0</StatsPostDelay>
          </AuthStats>
        </Stats>
      </AuthServer>
    </WCell>
  </Settings>
</Config>